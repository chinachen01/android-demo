<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="presenter"
            type="com.example.chenyong.android_demo.activity.HttpActivity.Presenter"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/show_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{presenter.onClick}"
                    android:text="show user info"/>

                <Button
                    android:id="@+id/watch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{presenter.onClick}"
                    android:text="watch RXANDROID"/>

                <Button
                    android:id="@+id/stop_watch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{presenter.onClick}"
                    android:text="stop watch rxandroid"/>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/info"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
